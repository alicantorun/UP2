<div class="container">
  <div class="row">
    <div class="col-lg-4 col-md-12 p-3 bg-white shadow rounded overflow-hidden">
      <img class="img-thumbnail" src={{userInfo.imageUrl}} alt="">
      <div class="row">
        <div class="col-4">KEY INT</div>
        <div class="col-4">KEY INT</div>
        <div class="col-4">KEY INT</div>
        <a href="/auth/signup-edit" class="btn btn-warning btn-sm btn-block mx-3">Edit
          profile</a>
        <a href="/auth/signup-edit" class="btn btn-danger btn-sm btn-block mx-3">Delete
          profile</a>
      </div>
    </div>
    <div class="col-lg-8 col-md-12  bg-white shadow rounded overflow-hidden">
      <h1>{{userInfo.name}}, {{userInfo.age}}</h1>
      <h2>{{userInfo.city}}</h2>
      <p>{{userInfo.bio}}</p>
    </div>


  </div>





</div>



<div class="container">
  <div id="carouselExampleControls" class="carousel slide" data-keyboard="true" data-touch="true" data-ride="carousel">
    <div class="carousel-inner">


      {{#each events}}
      {{#if @first}}
      <div class="carousel-item active rounded">
        {{else}}
        <div class="carousel-item rounded">
          {{/if}}


          <div class="row bg-white my-3 shadow rounded">

            <div class="col-lg-4 col-md-12">
              <img class="events-page-cards rounded shadow" src={{imageUrl}} alt="">
            </div>

            <div class="col-lg-8 col-md-12 d-flex justify-content-center flex-column" class="simple-card-wrapper">
              <h3>{{name}}</h3>
              <h3>{{creator.name}}</h3>
              <h3>{{mySlogan}}</h3>
              <p>{{description}}</p>
              {{#if owner}}
              <a href="/events/{{_id}}/edit" class="btn btn-warning ">Edit</a>
              <a href="/events/{{_id}}/delete" class="btn d-block btn-danger">Delete
              </a>
              {{/if}}
            </div>



          </div>
        </div>
        {{/each}}

      </div>

      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>




