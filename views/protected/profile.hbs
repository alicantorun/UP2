<div class="container mt-3">
  <div class="row justify-content-around">
    <div class="col-lg-4 col-md-12 p-3 bg-white overflow-hidden">
      <img class="img-thumbnail rounded-circle shadow" src={{userInfo.imageUrl}} width="200" height="200" alt="">
      <div class="row">
        {{#each userInfo.keyInt }}
        <img src="/images/{{this}}.png" alt="" style="width:35px; height:35px; margin:20px; border-radius:50%; box-shadow:0 0 5px black">
       
          {{/each}}
        <a href="/auth/signup-edit" class="btn btn-warning btn-sm btn-block mx-3">Edit
          profile</a>
      </div>
    </div>
    <div class="col-lg-7 col-md-12 bg-white shadow overflow-hidden">
      <div class="mt-5 ml-2">
      <h2>{{userInfo.name}}, {{userInfo.age}}</h2>
      </div>
      <div class="mt-2 ml-2">
      <h6>{{userInfo.city}}</h6>
      </div>
      <div class="mt-4 ml-2">
      <p>{{userInfo.bio}}</p>
      </div>
    </div>


  </div>





</div>



