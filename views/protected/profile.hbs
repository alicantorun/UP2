<div class="row py-5 px-4">
  <div class="col-xl-4 col-md-6 col-sm-10 mx-auto">

    <div class="bg-white shadow rounded overflow-hidden">
      <div class="px-4 pt-0 pb-4 bg-dark">
        <div class="media align-items-end profile-header">
          <div class="profile mr-3"><img src="images/minWeb.jpeg" alt="..." width="130"
              class="rounded mb-2 img-thumbnail"><a href="#" class="btn btn-dark btn-sm btn-block">Edit profile</a>
          </div>
          <div class="media-body mb-5 text-white">
            <h4 class="mt-0 mb-0">{{userInfo.name}}, {{userInfo.age}}</h4>
            <h6 class="mt-0 mb-0">Coder, Comedian</h6>
            <p class="small mb-4"> <i class="fa fa-map-marker mr-2"></i>Penang</p>
          </div>
        </div>
      </div>

      <div class="bg-light p-4 d-flex justify-content-end text-center">
        <ul class="list-inline mb-0">
          <li class="list-inline-item">
            <h5 class="font-weight-bold mb-0 d-block">31</h5><small class="text-muted"> <i
                class="fa fa-picture-o mr-1"></i>Events</small>
          </li>
          <li class="list-inline-item">
            <h5 class="font-weight-bold mb-0 d-block">2K</h5><small class="text-muted"> <i
                class="fa fa-user-circle-o mr-1"></i>Followers</small>
          </li>
        </ul>
      </div>

      <div class="py-4 px-4">
        <div class="d-flex align-items-center justify-content-between mb-3">
          <h5 class="mb-0">Recent events</h5><a href="#" class="btn btn-link text-muted">Show all</a>
        </div>
        <div class="row">
          <div class="col-lg-6 mb-2 pr-lg-1"><img url=({{imageUrl}}) alt="" class="img-fluid rounded shadow-sm"></div>
          <div class="col-lg-6 mb-2 pl-lg-1"><img src="images/playFootball01.jpg" alt=""
              class="img-fluid rounded shadow-sm"></div>
          <div class="col-lg-6 pr-lg-1 mb-2"><img src="images/concert01.jpg" alt="" class="img-fluid rounded shadow-sm">
          </div>
          <div class="col-lg-6 pl-lg-1"><img src="images/gaming01.jpg" alt="" class="img-fluid rounded shadow-sm"></div>
        </div>
        <div class="py-4">

          {{#each events}}



          {{#ifCond userInfo._id "===" creator._id}}
          Values are equal!
          {{else}}
          Values are different!
          {{/ifCond}}














          {{/each}}
        </div>
      </div>
    </div>

  </div>
</div>