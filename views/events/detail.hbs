<div class="swipe-event-card" style="display: block;">


  <div class="swipe-event-photo" style="display: block; background-image: url({{event.imageUrl}})">
    <div class="event-card-name text-align">{{event.name}}</div>
    <div class="event-card-description">{{event.description}}</div>
    <div class="event-card-id">event id: {{event._id}}</div>
    <div class="profile-card-user">{{event.creator.userInfo.imgUrl}}</div>
    <div class="event-card-creator">creator: {{event.creator.username}}</div>
  </div>
  <form action="/events/{{event._id}}/join" method="post" rel="external">
    <button type="submit">Join Event</button>

  </form>
</div>