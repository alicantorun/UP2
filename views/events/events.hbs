<div class="container-fluid ">
  <div class="container bg-white shadow mt-3">
    <div id="carouselExampleControls" class="carousel slide" data-keyboard="true" data-touch="true">
      <div class="carousel-inner">

        {{#each eventsList}}
        {{#if @first}}
        <div class="carousel-item active rounded">
          {{else}}
          <div class="carousel-item rounded">
            {{/if}}
            <div class="row d-flex justify-content-center my-3">

              <div class="card text-white">
                <img class="card-img carousel-card-img" src="{{imageUrl}}" alt="">
                <div class="card-img-overlay">
                  <div class="mt-5 ml-2">
                    <h3 class="card-title">{{name}}, {{date}}</h3>
                  </div>
                  <div class="mt-2 ml-2">
                    <h6 class="card-text">created by: {{creator.name}}</h6>
                  </div>
                  <div class="mt-4 ml-2">
                    <p class="card-text">{{description}}</p>
                  </div>
                  <div class="profile-buttons-div d-flex justify-content-center">
                    <div class="justify-content-center">
                      <a href="/events/{{_id}}/" class="btn m-1 btn-success">Go to Event!</a>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
          {{/each}}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

  </div>